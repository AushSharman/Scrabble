<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <GridPane>
            <Button fx:id="quitButton" text="QUIT" GridPane.rowIndex="0" GridPane.columnIndex="0"
                    onAction="#onButtonClicked"/>
            <Button fx:id="passButton" text="PASS" GridPane.rowIndex="0" GridPane.columnIndex="1"
                    onAction="#onButtonClicked"/>
            <Button fx:id="helpButton" text="HELP" GridPane.rowIndex="0" GridPane.columnIndex="2"
                    onAction="#onButtonClicked"/>
            <Button fx:id="exchangeButton" text="EXCHANGE" GridPane.rowIndex="0" GridPane.columnIndex="3"
                    onAction="#onButtonClicked"/>
        </GridPane>
    </top>

    <center>
        <GridPane fx:id="square" minWidth="100" minHeight="100" alignment="CENTER"></GridPane>
    </center>
</BorderPane>